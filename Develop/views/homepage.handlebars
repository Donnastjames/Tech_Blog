<!-- Loop over each blog_Post in the blogs array -->
{{#each BlogPost as |blog_post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/Blog_Post/{{blog_post.id}}">{{blog_post.title}}</a>
    </h2>
    <p>Created by {{blog_post.user.name}} on {{format_date blog_post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog_post.content}}
    </p>
  </div>
</div>
{{/each}}