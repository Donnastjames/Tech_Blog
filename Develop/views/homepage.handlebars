<!-- Loop over each blog_Post in the blogPosts array -->
{{#if blogPosts.length}}
  {{#each blogPosts as |blogPost| }}
  <div class="card w-100">
    <div class="card-header">
      <h2>
        <a href="/api/blogPosts/{{blogPost.id}}" style="color: #e3e4e3">{{blogPost.title}}</a>
      </h2>
      <p>Created by {{blogPost.user.username}} on {{format_date blogPost.date_created}}</p>
      
    </div>
      <div class="card-body">
        <p class="card-text">
          {{blogPost.content}}
        </p>
      </div>
  </div>
  {{/each}}
{{/if}}
