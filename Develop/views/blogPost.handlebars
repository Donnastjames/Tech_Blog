<div class="card w-100">
  <div class="card-header">
    <h2>
      {{#if user_owned_post}}
      <a href="/api/blogPosts/{{blogPost.id}}/update">{{blogPost.title}}</a>
      {{else}}
      {{blogPost.title}}
      {{/if}}
    </h2>
    <p>Created by {{blogPost.user.username}} on {{format_date blogPost.date_created}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">
      {{blogPost.content}}
    </p>
  </div>
</div>

{{#if blogComments.length}}
  {{#each blogComments as |blogComment| }}
  <div class="card w-100">
    <div class="card-body">
      <p>{{blogComment.comment}}</p>
      <p class="text-small">-{{blogComment.user.username}}, {{format_date blogComment.date_created}}</p>
    </div>
  </div>
  {{/each}}
{{/if}}

<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Comment</h2>
      <form class='form newCommentForm'>
        <div class='form-group'>
          <input type='text' class='form-control' id='newBlogComment' value='{{blog_comment.comment}}'>
        </div>
        
        <button class='btn btn-primary btn-lg btn-block submit' style="margin: 18px" id='createNewComment' type='click'>Submit</button>
        
      </form>
    </div>
  </div>
</div>

<script src="/js/addComment.js"></script>
