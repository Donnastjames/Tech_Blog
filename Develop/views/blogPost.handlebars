<div class="project">
  <div>
    <h2>
      {{blogPost.title}}
    </h2>
    <p>Created by {{blogPost.user.username}} on {{format_date blogPost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogPost.content}}
    </p>
  </div>
</div>

{{#if blogComments.length}}
  {{#each blogComments as |blogComment| }}
  <div class="project">
    <div class="col-md-7">
      <p>{{blogComment.comment}}</p>
      <p>-{{blogComment.user.username}}, {{format_date blogComment.date_created}}</p>
    </div>
  </div>
  {{/each}}
{{/if}}

<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-5'>
      <h2>Comment</h2>
      <form class='form newCommentForm'>
        <div class='form-group'>
          <input type='text' class='form-control' id='newBlogComment' value='{{blog_comment.comment}}'>
        </div>
        
        <button class='btn btn-primary submit' id='createNewComment' type='click'>Submit</button>
        
      </form>
    </div>
  </div>
</div>

<script src="/js/addComment.js"></script>
